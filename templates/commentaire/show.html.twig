{% extends 'base.html.twig' %}

{% block title %}Commentaire{% endblock %}

{% block body %}
    <h1>Commentaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commentaire.id }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ commentaire.Commentaire }}</td>
            </tr>
            <tr>
                <th>Datepublication</th>
                <td>{{ commentaire.Datepublication ? commentaire.Datepublication|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ commentaire.Etat ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_commentaire_index') }}">back to list</a>


    {% if is_granted('ROLE_ADMIN') %}
	
    <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}">edit</a>

    {{ include('commentaire/_delete_form.html.twig') }}

    {% elseif is_granted('ROLE_USER') %}
	
    {% else %}

	{% endif %}
						

  
{% endblock %}
